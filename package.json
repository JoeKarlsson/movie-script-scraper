{
  "name": "movie-script-scraper",
  "description": "A simple scraper to retrieve movie scripts by genre or title from IMSDB.",
  "version": "0.0.6",
  "homepage": "https://github.com/JoeKarlsson/movie-script-scraper",
  "keywords": [
    "movie script scraper",
    "movie",
    "film",
    "scraper",
    "imscb",
    "script sraper",
    "screenplay"
  ],
  "author": {
    "name": "Joe Karlsson",
    "email": "joekarlsson1@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JoeKarlsson/movie-script-scraper.git"
  },
  "bugs": {
    "url": "https://github.com/JoeKarlsson/movie-script-scraper/issues"
  },
  "license": "MIT",
  "main": "src/mss",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "node src/app",
    "start:title": "node src/app --title 'frozen'",
    "test": "jest --config=config/jest.config.js --coverage",
    "test:unit": "jest --config=config/jest.config.js tests/unit --coverage",
    "test:integration": "jest --config=config/jest.config.js tests/integration --coverage",
    "test:e2e": "jest --config=config/jest.config.js tests/e2e --coverage",
    "test:watch": "jest --config=config/jest.config.js --watch",
    "test:updateSnapshot": "jest --config=config/jest.config.js --updateSnapshot",
    "test:coverage": "jest --config=config/jest.config.js --coverage",
    "coverage": "c8 --reporter=text-lcov npm test",
    "lint": "eslint src --config=config/.eslintrc.js",
    "lint:fix": "eslint src --config=config/.eslintrc.js --fix",
    "lint:config": "eslint config --config=config/.eslintrc.js",
    "format": "prettier --config=config/.prettierrc --write src tests config",
    "format:check": "prettier --config=config/.prettierrc --check src tests config",
    "healthcheck": "npm run lint && npm run test:coverage",
    "precommit": "npm run lint && npm run test:unit",
    "prepush": "npm prune && npm run healthcheck",
    "postmerge": "npm install",
    "audit:fix": "npm audit fix",
    "update:deps": "npm update",
    "clean": "rm -rf coverage node_modules/.cache",
    "dev": "npm run test:watch"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "node-fetch": "^2.7.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "mkdirp": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "babel-jest": "^29.7.0",
    "c8": "^8.0.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "fetch-mock": "^10.0.8",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.1"
  }
}
